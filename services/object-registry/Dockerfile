FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application
COPY app/ ./app/

# Environment
ENV DATA_DIR=/data/registry
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8010

# Run
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8010"]
